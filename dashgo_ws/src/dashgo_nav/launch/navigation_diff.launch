<launch>
  <include file="$(find dashgo_driver)/launch/driver_imu.launch"/>
  <include file="$(find ydlidar)/launch/ydlidar1_up.launch"/>
  <include file="$(find dashgo_description)/launch/dashgo_description.launch"/>
  <arg name="map_file" default="$(find dashgo_nav)/maps/map_diff_demo.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <rosparam file="$(arg map_file)" command="load" ns="map" />
  <arg name="initial_pose_x" default="0.0"/> 
  <arg name="initial_pose_y" default="0.0"/> 
  <arg name="initial_pose_a" default="0.0"/>
  <include file="$(find dashgo_nav)/launch/include/imu/amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen" clear_params="true">
    <rosparam file="$(find dashgo_nav)/config/imu/costmap_common_params_diff.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find dashgo_nav)/config/imu/costmap_common_params_diff.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find dashgo_nav)/config/imu/local_costmap_params_diff.yaml" command="load" />
    <rosparam file="$(find dashgo_nav)/config/imu/global_costmap_params_diff.yaml" command="load" />
    <!-- <rosparam file="$(find dashgo_nav)/config/imu/base_global_planner_param.yaml" command="load" /> -->

    <rosparam file="$(find dashgo_nav)/config/imu/move_base_params_diff.yaml" command="load" />
    <rosparam file="$(find dashgo_nav)/config/imu/dwa_local_planner_params.yaml" command="load" />


    <param name="global_costmap/global_frame" value="map"/>
    <param name="global_costmap/robot_base_frame" value="base_footprint"/>
    <param name="local_costmap/global_frame" value="odom_combined"/>
    <param name="local_costmap/robot_base_frame" value="base_footprint"/>
    <param name="DWAPlannerROS/global_frame_id" value="odom_combined"/>
  </node>

  <node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher" />

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="laser_filter">
      <rosparam command="load" file="$(find dashgo_tools)/conf/box_filter.yaml" />
  </node>
  <node name="multiGoals" pkg="dashgo_tools" type="multiGoals.py" respawn="true" />
  <node name="get_scan_data" pkg="dashgo_tools" type="get_scan_data.py" respawn="true" />
</launch>
