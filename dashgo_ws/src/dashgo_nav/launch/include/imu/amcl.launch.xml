      <remap from="/scan" to="/$(arg ns)/scan"/>
      <param name="noise" value="0.00"/>
      <param name="ns" type="str" value="$(arg ns)"/>
  </node>
    <node name="mobile_base" pkg="mobile_base_simulator" type="mobile_base_simulator.py" >
      <remap from="/cmd_vel" to="/$(arg ns)/cmd_vel"/>
      <param name="ns" type="str" value="$(arg ns)"/>
  </node>
  <node pkg="tf" type="static_transform_publisher" name="lidar_tf_publisher" args="0.19 0.01 0.20 0 0 0 1 /base_link /laser_link 100" />
    <node name="loc_amcl" pkg="amcl" type="amcl" args="scan:=/$(arg ns)/scan">
        <param name="odom_alpha1" value="0.6"/>
        <param name="odom_alpha2" value="0.6"/>
        <param name="odom_alpha3" value="0.6"/>
        <param name="odom_alpha4" value="0.6"/>
        <param name="odom_alpha5" value="0.6"/>
        <param name="recovery_alpha_slow" value="0.001"/>
        <param name="recovery_alpha_fast" value="0.1"/>
        <param name="initial_pose_x" value="$(arg initial_pose_x)"/>
        <param name="initial_pose_y" value="$(arg initial_pose_y)"/>
        <param name="initial_pose_a" value="0.0"/>
        <param name="update_min_a" value="0.3"/>
        <param name="laser_min_range" value="0.3"/>
        <param name="odom_model_type" value="omni"/>
        <param name="use_map_topic" value="true" />
        <param name="global_frame_id" value="/map" />
        <param name="base_frame_id" value="$(arg ns)/base_link" />
        <param name="odom_frame_id" value="$(arg ns)/odom" />

    </node>
</launch>
